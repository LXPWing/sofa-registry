<?xml version="1.0" encoding="UTF-8"?>

<!-- Logback config -->
<configuration>
    <property scope="local" name="LOG_HOME" value="${logging.path}/registry/session"/>
    <property scope="local" name="LOG_LEVEL" value="${com.alipay.sofa.registry.server.log.level}"/>
    <property scope="local" name="LOG_ENCODE" value="UTF-8"/>

    <!-- appenders -->
    <appender name="ERROR-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <filters>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </filters>
        <file>${LOG_HOME}/common-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/common-error.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{ISO8601}][%p][%t][%c{0}#%L] - %m%n</pattern>
            <charset>${LOG_ENCODE}</charset>
        </encoder>
    </appender>

    <appender name="ROOT-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <filters>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
            </filter>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>${LOG_LEVEL}</level>
                <onMatch>ACCEPT</onMatch>
            </filter>
        </filters>
        <file>${LOG_HOME}/common-default.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/common-default.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{ISO8601}][%p][%t][%c{0}] - %m%n</pattern>
            <charset>${LOG_ENCODE}</charset>
        </encoder>
    </appender>

    <appender name="DEFAULT-SERVER-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <filters>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
            </filter>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>${LOG_LEVEL}</level>
                <onMatch>ACCEPT</onMatch>
            </filter>
        </filters>
        <file>${LOG_HOME}/registry-session.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/registry-session.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{ISO8601}][%p][%t][%c{0}] - %m%n</pattern>
            <charset>${LOG_ENCODE}</charset>
        </encoder>
    </appender>

    <appender name="DEFAULT-SERVER-CONNECT-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <filters>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>DENY</onMatch>
            </filter>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>${LOG_LEVEL}</level>
                <onMatch>ACCEPT</onMatch>
            </filter>
        </filters>
        <file>${LOG_HOME}/registry-connect.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/registry-connect.log.%d{yyyy-MM-dd}</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{ISO8601}][%p][%t][%c{0}] - %m%n</pattern>
            <charset>${LOG_ENCODE}</charset>
        </encoder>
    </appender>

    <!-- loggers -->
    <logger name="com.alipay.sofa.registry.server" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="DEFAULT-SERVER-APPENDER"/>
        <appender-ref ref="ERROR-APPENDER"/>
    </logger>

    <logger name="SESSION-CONNECT" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="DEFAULT-SERVER-CONNECT-APPENDER"/>
        <appender-ref ref="ERROR-APPENDER"/>
    </logger>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="ROOT-APPENDER"/>
        <appender-ref ref="ERROR-APPENDER"/>
    </root>
</configuration>